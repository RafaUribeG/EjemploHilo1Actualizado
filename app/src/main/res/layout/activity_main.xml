<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".eactivity.MainActivity"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/txtHilos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HILOS:"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txtHilo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceso Hilo 1"
        android:textSize="34sp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        />

    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Iniciar Hilo Bloqueado"/>

    <Button
        android:id="@+id/btnIniciar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Iniciar Hilo Segundo Plano"/>

    <Button
        android:id="@+id/btnIniciarHiloSecundarioPlanoUI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Iniciar Hilo Segundp Plano UI"/>

    <Button
        android:id="@+id/btnIniciarHiloSecundarioPlanoAsyncTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Iniciar Hilo AsyncTask"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>